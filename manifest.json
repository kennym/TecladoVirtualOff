{
  "manifest_version": 2,

  "name": "Teclado Virtual Off",
  "description": "Borra el teclado virtual de varios sitios de bancos.",
  "version": "1.0",
  "icons": { "19": "icons/19x19.png", "38": "icons/38x38.png", "128": "icons/128x128.png" },
  "browser_action": {
    "default_icon": { "19": "icons/19x19.png", "38": "icons/38x38.png" }
  },

  "permissions": [
    "https://secure.visionbanco.com/bancaweb"
  ],

  "content_scripts": [
    {
      "matches": [
        "https://secure.visionbanco.com/bancaweb/#",
        "https://secure.visionbanco.com/bancaweb/",
        "https://secure.visionbanco.com/bancaweb"
      ],
      "js": ["sites/visionbanco.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://ssecure.familiar.com.py/bancaweb/login.mobi",
        "https://ssecure.familiar.com.py/bancaweb/login.web"
      ],
      "js": ["sites/familiar.js"],
      "run_at": "document_end"
    }
  ]
}
